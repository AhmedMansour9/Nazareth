<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Details_Reviewes">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_Slider"
        android:layout_marginTop="@dimen/_120sdp"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycler_Slider"
        android:textColor="#E2503F"
        android:text="ahmed mansour"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/Title"
        />
    <RatingBar
        android:id="@+id/rating_bar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:rating=".25"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_below="@+id/Title"
        android:gravity="left|center"
        android:isIndicator="true"
        android:numStars="5"
        android:progressTint="#F5C401"
        android:transformPivotX="0dp"
        android:progressBackgroundTint="#000"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_Rating"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/rating_bar"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>